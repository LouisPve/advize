{
  "name": "advize",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "install-clean": "rm -rf node_modules && rm package-lock.json && npm install",
    "build": "esbuild ./src/app.ts --bundle --platform=node --outfile=dist/app.js",
    "start": "node --env-file=.env ./dist/app.js ",
    "dev": "nodemon --watch ./src --exec \"npm run build && npm run start\"",
    "build-image": "docker build -t advize-app .",
    "run-image": "docker run -p 3000:3000 advize-app"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LouisPve/advize.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/LouisPve/advize/issues"
  },
  "homepage": "https://github.com/LouisPve/advize#readme",
  "description": "",
  "dependencies": {
    "express": "^5.1.0",
    "joi": "^17.13.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "esbuild": "^0.25.1",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
